{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["prettier"],
    "plugins": ["@typescript-eslint", "prettier", "react", "react-hooks"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 8,
        "requireConfigFile": false,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "impliedStrict": true
        }
    },
    "ignorePatterns": [
        "**/node_modules/**",
        "dist/**",
        "*.spec*",
        "package*.json"
    ],
    "rules": {
        "indent": [2,4],
        "key-spacing": [
            2,
            {
                "singleLine": {
                    "beforeColon": false,
                    "afterColon": true
                },
                "multiLine": {
                    "beforeColon": true,
                    "afterColon": true,
                    "align": "colon"
                }
            }
        ],
        "no-multi-spaces": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "curly": "warn",
        "dot-notation": "warn",
        "no-console": [
            "warn",
            {
                "allow": ["warn", "error", "info"]
            }
        ],
        "no-else-return": "warn",
        "no-lonely-if": "warn",
        "no-restricted-globals": "off",
        "no-restricted-syntax": 0,
        "no-unneeded-ternary": "warn",
        "no-unused-expressions": "off",
        "no-unused-vars": "off",
        "no-useless-return": "warn",
        "no-var": "warn",
        "object-shorthand": "warn",
        "one-var": ["warn", "never"],
        "prefer-arrow-callback": "warn",
        "prefer-const": [
            "warn",
            {
                "destructuring": "all"
            }
        ],
        "prefer-template": "warn"
    }
}
